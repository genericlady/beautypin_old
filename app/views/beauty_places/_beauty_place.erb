<h2><%= beauty_place.name %></h2>
<h2><%= beauty_place.address %></h2>
<h2><%= beauty_place.city %>, <%= beauty_place.state %></h2>
<h2>published: <%= beauty_place.published %></h2>
<hr>
<!-- Employee List -->
<h2>All employees</h2>
<table class='table'>
  <tbody>
  <% beauty_place.employees.each do |employee| %>
    <tr>
      <td><%= employee.name %></td>
      <% if current_user.normal? %>
        <td><%= link_to 'Make Appointment' %></td>
      <% else %>
      <td><%= link_to 'Edit' %></td>
      <td><%= button_to 'Delete', employee, method: :delete %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<% if policy(beauty_place).beauty_place_owner? %>
  <h3>Add Employee</h3>
  <%= link_to 'Add Employee' %>
<% end %>
<hr>

<h2>Deals being offered at <%= beauty_place.name %></h2>
<table class='table'>
  <thead>
    <tr>
      <th>title</th>
      <th>discount</th>
      <th>description</th>

    </tr>
  </thead>
  <tbody>
  <% beauty_place.deals.each do |deal| %>
    <tr>
      <td><%= deal.title %></td>
      <td><%= deal.discount %>%</td>
      <td><%= deal.description %></td>
      <% if policy(deal).update? %>
        <td><%= link_to 'Edit', edit_deal_path(current_user, deal) %></td>
        <td><%= link_to 'Destroy', deal_path(current_user, deal), method: :delete %></td>
      <% else %>
        <td><%= link_to 'Purchase' %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>
<hr>
<% if policy(beauty_place).beauty_place_owner? %>
  <h3>Create a New Deal</h3>
  <%= render '/deals/form', deal: @deal %>
<% end %>
