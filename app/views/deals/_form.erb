<%= form_for deal do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_field :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :discount %>
    <%= f.text_field :discount, class: 'form-control', placeholder: '10%, 15%, etc.' %>
  </div>
  <%= submit_tag 'Create', beauty_place_deals_path %>
<% end %>
