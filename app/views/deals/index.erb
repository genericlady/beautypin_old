<h1>Deals</h1>

<table>
  <tbody>
  <% policy_scope(@deals).each do |deal| %>
    </tr>
        <td><%= link_to deal.title, deal_path(deal)  %></td>
        <% if policy(deal).update? %>
          <td><%= link_to 'Edit', edit_deal_path(deal) %></td>
          <td><%= link_to 'Destroy', deal_path(deal), method: :delete %></td>
        <% end %>
    <tr>
  <% end %>
  </tbody>
</table>

<% if policy(current_user.beauty_places.first).update? %>
  <%= link_to 'New Deal', new_deal_path %>
<% end %>
